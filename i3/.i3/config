        focused_workspace   $focused_workspace $focused_workspace $fg
        active_workspace    $bg                $bg                $urgent
        inactive_workspace  $bg                $bg                $inactive_workspace_text
        urgent_workspace    $urgent_workspace  $urgent_workspace  $urgent_workspace_text
    }
}

