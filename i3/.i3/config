bindsym $mod+x exec $lock
exec --no-startup-id xautolock -detectsleep -time 10 -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'" -locker $lock

# volume keys
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse set Master 5%+ unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse set Master 5%- unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse set Master toggle && pkill -RTMIN+1 i3blocks

# backlight keys
bindsym XF86MonBrightnessUp exec --no-startup-id sudo /home/schnie/.scripts/brightness +
bindsym XF86MonBrightnessDown exec --no-startup-id sudo /home/schnie/.scripts/brightness -

#3 resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $mod+h resize grow left 20 px or 20 ppt
        bindsym $mod+j resize shrink up 20 px or 20 ppt
        bindsym $mod+k resize grow up 20 px or 20 ppt
        bindsym $mod+l resize shrink left 20 px or 20 ppt

        bindsym $mod+Shift+h resize shrink right 20 px or 20 ppt
        bindsym $mod+Shift+j resize grow down 20 px or 20 ppt
        bindsym $mod+Shift+k resize shrink down 20 px or 20 ppt
        bindsym $mod+Shift+l resize grow right 20 px or 20 ppt

        # same bindings, but for the arrow keys
        # bindsym Left resize shrink width 10 px or 10 ppt
        # bindsym Down resize grow height 10 px or 10 ppt
        # bindsym Up resize shrink height 10 px or 10 ppt
        # bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Floating windows
for_window [class="Lxappearance"] floating enable

